@model SchoolPortal.Common.DTOs.UpdateCountryDto

@{
    ViewData["Title"] = "Delete Country";
}

<div class="page-header">
    <h1>
        Delete Country
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Remove country from the system
        </small>
    </h1>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title">Are you sure you want to delete this?</h4>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right">@Html.DisplayNameFor(model => model.CountryName)</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">@Html.DisplayFor(model => model.CountryName)</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right">@Html.DisplayNameFor(model => model.IsActive)</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    @if (Model.IsActive)
                                    {
                                        <span class="label label-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger">Inactive</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="clearfix form-actions">
                            <div class="col-md-offset-3 col-md-9">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="Id" />
                                    <button type="submit" class="btn btn-danger">
                                        <i class="ace-icon fa fa-trash bigger-110"></i>
                                        Delete
                                    </button>
                                    &nbsp; &nbsp; &nbsp;
                                    <a asp-action="Index" class="btn">
                                        <i class="ace-icon fa fa-undo bigger-110"></i>
                                        Back to List
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 