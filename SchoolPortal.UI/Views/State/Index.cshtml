@model IEnumerable<SchoolPortal.Common.DTOs.ViewStateDto>

@{
    ViewData["Title"] = "States";
}

<div class="row">
    <div class="col-xs-12">
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="ace-icon fa fa-plus"></i>
                Create New
            </a>
        </div>
        @await Html.PartialAsync("_Alert")
        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>
        <div class="table-header">
            Results for "States"
        </div>
        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().StateName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CountryName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.StateName)</td>
                        <td>@Html.DisplayFor(modelItem => item.CountryName)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                        <td>
                            <div class="hidden-sm hidden-xs btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-xs btn-info" title="Edit">
                                    <i class="ace-icon fa fa-pencil bigger-120"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-xs btn-success" title="Details">
                                    <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-xs btn-danger" title="Delete">
                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                </a>
                            </div>
                            <div class="hidden-md hidden-lg">
                                <div class="inline pos-rel">
                                    <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                        <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                        <li>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                <span class="green">
                                                    <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="tooltip-info" data-rel="tooltip" title="Details">
                                                <span class="blue">
                                                    <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                <span class="red">
                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/state.js"></script>
} 